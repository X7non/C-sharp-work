using System;

namespace ConsoleApp4
{
    class Program
    {
        static void Main(string[] args)
        {
            double chek;
            chek = Convert.ToInt32(Console.ReadLine());
            if (chek > 1000)
            {
                Console.WriteLine(chek * 0.95f);
            } else if (chek > 500)
            {
                Console.WriteLine(chek * 0.97f);
            } else
            {
                Console.WriteLine(chek);
            }
        }
    }
}
