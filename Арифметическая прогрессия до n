using System;

namespace ConsoleApp1
{
    class Program
    {
        static void Main(string[] args)
        {
            int n, s = 0;
            n = Convert.ToInt32(Console.ReadLine());
            for (int i=0; i<=n; i++)
            {
                s += i;
            }
            Console.WriteLine(s);
        }
    }
}
